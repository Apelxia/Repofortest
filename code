begin
  if reset = '1' then
    count_i <= ustart;  -- Reset the counter to the starting value
  elsif rising_edge(clk) then
    if ce = '1' then  -- Check if count enable signal is active
      if count_i = ufinish then
        count_i <= ustart;  -- Wrap around to start if terminal count is reached
      else
        count_i <= count_i + 1;  -- Increment the counter
      end if;
    end if;
  end if;
end process;
