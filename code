 SYNC_PROC: process(clk, reset)
  begin
    if reset = '1' then
      count_i <= ustart;  -- Reset counter to start value
    elsif rising_edge(clk) then
      if count_i = ufinish then
        count_i <= ustart;  -- Wrap around from finish to start
      else
        count_i <= count_i + 1;  -- Increment counter
      end if;
    end if;
  end process SYNC_PROC;
end rtl;
